<UserControl x:Class="Airlines_Markov.Element.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Airlines_Markov.Element"
             mc:Ignorable="d" Height="98" Width="740">
    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="98" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Content="1999 Р" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10" FontSize="18" FontWeight="Bold" Grid.Column="0"/>
        <Button Height="24" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20" Foreground="White" Content="Подробнее" Background="OrangeRed" Grid.Column="0"/>
        <Grid Grid.Column="1" VerticalAlignment="Center" Height="100">
            <Label Content="pobeda" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="10"/>
            <Label Content="05:50" HorizontalAlignment="Left"  Margin="0,20,0,0" FontSize="18"/>
            <Label Content="Пермь" HorizontalAlignment="Left"  Margin="0,50,0,0" FontSize="8"/>
            <Label Content="29 сентября 2025" HorizontalAlignment="Left" Margin="0,65,0,0" FontSize="8"/>
        </Grid>

        <Grid Grid.Column="2" Height="60" VerticalAlignment="Center" Width="360">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Image VerticalAlignment="Center" HorizontalAlignment="Left" Height="20"/>
                <Label Content="В пути: 2ч 15м" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image  VerticalAlignment="Center" HorizontalAlignment="Right" Height="20" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="53.217"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Grid>
            <Grid Grid.Row="1">
                <Border Background="DarkSlateGray" Height="5"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="3" VerticalAlignment="Center" Height="100">
            <Label Content="pobeda" HorizontalAlignment="Left" Margin="0,5,0,0" FontSize="10"/>
            <Label Content="06:50" HorizontalAlignment="Left"  Margin="0,20,0,0" FontSize="18"/>
            <Label Content="Пермь" HorizontalAlignment="Left"  Margin="0,50,0,0" FontSize="8"/>
            <Label Content="29 сентября 2025" HorizontalAlignment="Left" Margin="0,65,0,0" FontSize="8"/>
        </Grid>
    </Grid>
</UserControl>
