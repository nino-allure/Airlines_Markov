<Page x:Class="Airlines_Markov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Markov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
          Title="Управление Авиалиниями" Height="450" Width="800"
    MinHeight="400" MinWidth="800">
    <Grid Background="#0041C2">
        <Grid Grid.Row="1" Margin="0,50,0,0" Width='480'>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Label Content="Поиск Дешевых Билетов" Foreground="White" FontSize="24px" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Height="40"/>
            <Label Content="Лучший способ купить авибилеты дешево" Foreground="White" FontSize="16px" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"/>
            <Label Content="Откуда:" Foreground="White" FontSize="12px" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2"/>
            <Label Content="Куда:" Foreground="White" FontSize="12px" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="4"/>
            <TextBox Grid.Row="3" x:Name="from"  Height="30"/>
            <TextBox Grid.Row="5" x:Name="to" Height="30"/>
            <Button Grid.Row="6" Height="30" Width="100" Background="OrangeRed" Content="Найти" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Search"/>
        </Grid>
    </Grid>
</Page>